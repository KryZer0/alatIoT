<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monitor ●"
        android:textColor="#2b2b2b"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Box CO and Suhu -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/box1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/box_background"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/labelCO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CO"
            android:textColor="#2b2b2b"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/coValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6,13 ppm"
            android:textSize="28sp"
            android:textColor="#00A676"
            app:layout_constraintTop_toBottomOf="@+id/labelCO"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/coStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aman"
            android:textColor="#00A676"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/coValue"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/coDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/coStatus"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/labelSuhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suhu"
            android:textColor="#2b2b2b"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tempValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="33,0℃"
            android:textSize="28sp"
            android:textColor="#00A676"
            app:layout_constraintTop_toBottomOf="@+id/labelSuhu"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Box CO2 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/box2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/box_background"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/box1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/co2Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CO₂"
            android:textColor="#2b2b2b"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/co2Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,73 ppm"
            android:textColor="#00A676"
            android:textSize="28sp"
            app:layout_constraintTop_toBottomOf="@+id/co2Label"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/co2Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aman"
            android:textColor="#00A676"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/co2Value"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/emisiStatus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="AMAN"
            android:textColor="#00A676"
            android:textSize="14sp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:padding="4dp"
            app:layout_constraintTop_toTopOf="@+id/co2Value"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/co2Desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/co2Value"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Box Kesimpulan -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/box3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/box_background"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/box2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/kesimpulanLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kesimpulan:"
            android:textColor="#2b2b2b"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/kesimpulanValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Semua parameter emisi berada pada level aman."
            android:textColor="#444444"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@+id/kesimpulanLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Garis dan label bawah -->
    <TextView
        android:id="@+id/noDataLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No data"
        android:textColor="#2b2b2b"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/box3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Live and Time Range -->
    <LinearLayout
        android:id="@+id/timeOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/noDataLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Live"
            android:textSize="12sp"
            android:backgroundTint="#29DB93"
            android:textColor="#000000" />

        <Button
            android:id="@+id/record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Record"
            android:textSize="12sp"
            android:backgroundTint="@color/red"
            android:textColor="#000000" />

    </LinearLayout>
    <!-- Tabel Data Emisi -->
    <TableLayout
        android:id="@+id/emissionTable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        app:layout_constraintTop_toBottomOf="@+id/timeOptions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:background="@drawable/box_background"
        android:padding="8dp">

        <TableLayout
            android:id="@+id/tableAbsensi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow>
                <TextView
                    android:id="@+id/headerNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/squared_box"
                    android:text="No"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/headerGas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/squared_box"
                    android:text="Gas Co"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/headerGas2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/squared_box"
                    android:text="Gas Co2"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/headerTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/squared_box"
                    android:text="Temp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/headerKet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/squared_box"
                    android:text="Keterangan"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />
            </TableRow>
        </TableLayout>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
